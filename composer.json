{
    "name": "niiknow/laratt-api",
    "description": "Table API",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "darkaonline/l5-swagger": "5.7.*",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.3.3",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "league/csv": "^9.1",
        "league/flysystem-aws-s3-v3": "^1.0",
        "rachidlaasri/laravel-installer": "^4.0",
        "spatie/laravel-backup": "^5.11",
        "yajra/laravel-datatables-oracle": "~8.0",
        "zircote/swagger-php": "^3.0",
        "niiknow/laratt": "^1.1"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Api\\": "api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf -w",
        "app:clear": [
            "rm -rf ./build/release",
            "mkdir -p ./build/release",
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "composer dump-autoload",
            "rm -f bootstrap/cache/config.php"
        ],
        "app:package": [
            "composer app:clear",
            "npm run production",
            "tar -X './.packageignore' -zcvf ./build/release/dist.tar.gz ./"
        ],
        "app:production": [
            "composer app:clear",
            "chmod -R 775 storage/framework/",
            "chmod -R 775 storage/logs/",
            "chmod -R 775 boostrap/cache/",
            "echo 'composer install --no-dev --optimize-autoloader'"
        ],
        "docker:clear": [
            "rm -rf .docker/data/mysql/*",
            "rm -rf .docker/logs/*"
        ],
        "auto-complete:generate": [
            "php artisan ide-helper:meta",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    }
}
